@page
@model OurLasalle.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<form method="post">
    <div>
        <label asp-for="UserDto.Username"></label>
        <input asp-for="UserDto.Username" />
    </div>
    <div>
        <label asp-for="UserDto.Password"></label>
        <input asp-for="UserDto.Password" type="password" />
    </div>
    <div>
        <label asp-for="UserDto.Role"></label>
        <select asp-for="UserDto.Role" asp-items="Model.Roles">
        </select>
    </div>
    <button type="submit">Register</button>
    <div style="color: red">@Model.ErrorMessage</div>
</form>
